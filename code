import random

words = ["india", "usa", "denmark", "finland", "facebook", "meta", "deshaw", "twitter", "whatsapp", "instagram", "apple", "redmi", "samsung", "windows"]

# Randomly chose a word from the list
chosen_word = random.choice(words)
word_display = ['_' for _ in chosen_word] #Create a list of underscores
attempts = 6 #No of attempts allowded

print("Welcome to Hangman!")

while attempts > 0 and '_' in word_display:
  print ("\n" + ' '.join(word_display))
  guess = input("Guess a letter: ").lower()
  if guess in chosen_word:
    for index, letter in enumerate(chosen_word):
      if letter == guess:
        word_display[index] = guess
  else:
    print("That letter dosent appear in the word.")
    attempts -= 1

# Game conclusion
if '_' not in word_display:
  print("You guessed the word!")
  print(chosen_word)
  print("You survived!")
else:
  print("You ran out of attempts. The word was: " + chosen_word)
  print("You lost!")
